@model IEnumerable<RezerwacjaBiletow.Models.Seance>

@{
    ViewData["Title"] = "Manage your seances";
    Layout = "~/Views/Shared/_Layout_Managment.cshtml";
}

<h2>Manage your seances</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID_CinemaHall)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ID_Movie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartingTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ID_Cinema)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_CinemaHall)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Movie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Cinema)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
